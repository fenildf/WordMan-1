<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qlfsoft.wordman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.qlfsoft.wordman.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.qlfsoft.wordman.ui.SplashActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qlfsoft.wordman.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.qlfsoft.wordman.ui.SelCategoryActivity"
            android:label="@string/app_name"
            android:theme="@style/StyledIndicators" 
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.LoginActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.RegisterActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.WordActivity"></activity>
        <activity android:name=".ui.WordInfoActivity"></activity>
    </application>

</manifest>
