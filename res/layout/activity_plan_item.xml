<?xml version="1.0" encoding="utf-8"?>
<com.qlfsoft.wordman.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x100"
    android:layout_height="@dimen/x100"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/x10"
    android:background="@drawable/bk_category"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/plan_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x10"
            android:ellipsize="end"
            android:freezesText="false"
            android:maxLines="2"
            android:maxWidth="@dimen/x65"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/plan_item_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

        <ImageView
            android:id="@+id/plan_item_img_sel"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center"
            android:src="@drawable/right_log"
            android:visibility="invisible" />

</com.qlfsoft.wordman.widget.SquareLayout>
